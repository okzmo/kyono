{
  "name": "kyodo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "dev": "node ace serve --hmr",
    "test": "node ace test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "db:up": "docker compose -f ./compose.db.yml up -d",
    "db:down": "docker compose -f ./compose.db.yml down"
  },
  "imports": {
    "#auth/*": "./app/auth/*.js",
    "#card/*": "./app/card/*.js",
    "#exceptions/*": "./app/core/exceptions/*.js",
    "#mails/*": "./app/core/mails/*.js",
    "#utils/*": "./app/core/utils/*.js",
    "#services/*": "./app/core/services/*.js",
    "#listeners/*": "./app/core/listeners/*.js",
    "#events/*": "./app/core/events/*.js",
    "#middleware/*": "./app/core/middleware/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/core/policies/*.js",
    "#abilities/*": "./app/core/abilities/*.js",
    "#database/*": "./database/*.js",
    "#tests/*": "./tests/*.js",
    "#start/*": "./start/*.js",
    "#config/*": "./config/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.0.0",
    "@adonisjs/prettier-config": "^1.4.0",
    "@adonisjs/tsconfig": "^1.4.0",
    "@iconify-json/solar": "^1.2.2",
    "@japa/assert": "^4.0.1",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.2.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@swc/core": "1.10.16",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.13.2",
    "eslint": "^9.20.1",
    "hot-hook": "^0.4.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.0",
    "ts-node-maintained": "^10.9.5",
    "typescript": "~5.7.3",
    "unplugin-icons": "^22.1.0",
    "vite": "^6.1.0"
  },
  "dependencies": {
    "@adonisjs/ally": "^5.1.0",
    "@adonisjs/auth": "^9.3.1",
    "@adonisjs/core": "^6.17.2",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/drive": "^3.2.0",
    "@adonisjs/inertia": "^3.1.0",
    "@adonisjs/lucid": "^21.6.0",
    "@adonisjs/session": "^7.5.1",
    "@adonisjs/shield": "^8.1.2",
    "@adonisjs/static": "^1.1.1",
    "@adonisjs/vite": "^4.0.0",
    "@aws-sdk/client-s3": "^3.758.0",
    "@aws-sdk/s3-request-presigner": "^3.758.0",
    "@fontsource/rethink-sans": "^5.2.5",
    "@fontsource/vollkorn": "^5.2.5",
    "@inertiajs/svelte": "^2.0.4",
    "@tailwindcss/vite": "^4.0.10",
    "@vinejs/vine": "^3.0.0",
    "bits-ui": "^1.0.0-next.98",
    "edge.js": "^6.2.1",
    "embla-carousel-svelte": "^8.5.2",
    "luxon": "^3.5.0",
    "pg": "^8.13.3",
    "reflect-metadata": "^0.2.2",
    "sharp": "^0.33.5",
    "svelte": "^5.22.4",
    "svelte-easy-crop": "^4.0.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.10"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}
